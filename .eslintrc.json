{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "installedESLint": true,
    "parser": "babel-eslint",
    "rules": {
        "linebreak-style": 0,
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "react/prop-types": ["error", {"skipUndeclared":true}]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "plugins": [
        "react"
    ]
}
